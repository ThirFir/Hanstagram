<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_activity_size">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="login_activity_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="post_image_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">460dp</item>
    </style>

    <style name="text_time_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="text_content_style">
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="text_message_id_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_sky_blue</item>
    </style>

    <style name="text_button_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_count_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>