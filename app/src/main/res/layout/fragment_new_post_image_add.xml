<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.NewPostImageAddFragment">


    <ImageView
        android:id="@+id/image_first"
        style="@style/post_image_size"
        android:src="@drawable/ic_add_96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_second"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/image_first"
        app:layout_constraintEnd_toStartOf="@id/image_third"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_add_96"/>

    <ImageView
        android:id="@+id/image_third"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/image_second"
        app:layout_constraintBottom_toBottomOf="@id/image_second"
        app:layout_constraintStart_toEndOf="@id/image_second"
        app:layout_constraintEnd_toStartOf="@id/image_fourth"
        android:src="@drawable/ic_add_96"/>

    <ImageView
        android:id="@+id/image_fourth"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/image_second"
        app:layout_constraintBottom_toBottomOf="@id/image_second"
        app:layout_constraintStart_toEndOf="@id/image_third"
        app:layout_constraintEnd_toStartOf="@id/image_fifth"
        android:src="@drawable/ic_add_96"/>
    <ImageView
        android:id="@+id/image_fifth"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_fourth"
        app:layout_constraintTop_toTopOf="@id/image_second"
        app:layout_constraintBottom_toBottomOf="@id/image_second"
        android:src="@drawable/ic_add_96"/>

</androidx.constraintlayout.widget.ConstraintLayout>