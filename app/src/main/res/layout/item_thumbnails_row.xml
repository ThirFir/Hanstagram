<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_first_column"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_second_column"/>

    <ImageView
        android:id="@+id/image_second_column"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="1dp"
        app:layout_constraintStart_toEndOf="@id/image_first_column"
        app:layout_constraintTop_toTopOf="@id/image_first_column"
        app:layout_constraintBottom_toBottomOf="@id/image_first_column"
        app:layout_constraintEnd_toStartOf="@id/image_third_column"/>

    <ImageView
        android:id="@+id/image_third_column"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="1dp"
        app:layout_constraintStart_toEndOf="@id/image_second_column"
        app:layout_constraintTop_toTopOf="@id/image_first_column"
        app:layout_constraintBottom_toBottomOf="@id/image_first_column"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>