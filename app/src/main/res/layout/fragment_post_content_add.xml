<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".ui.fragment.PostContentAddFragment">


    <EditText
        android:id="@+id/edit_text_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="12dp"
        android:hint="@string/text_input_content"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@id/image_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_display"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/light_gray"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toEndOf="@id/edit_text_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_text_content"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>